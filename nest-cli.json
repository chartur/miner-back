{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../assets",
        "outDir": "build/assets",
        "watchAssets": true
      },
      {
        "include": "../.local.env",
        "outDir": "build/.local.env",
        "watchAssets": false
      }
    ]
  }
}
