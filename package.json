{
  "name": "miner-back",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:prod": "nest build && cp .prod.env ./build/.prod.env",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build:watch": "nest build --watch",
    "start:api": "MODE=local nodemon build/main.js",
    "start:bot": "MODE=local nodemon build/microservices/telegram/main.js",
    "start:all": "concurrently \"npm run build:watch\" \"npm run start:api\" \"npm run start:bot\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node build/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:create": "npm run typeorm migration:create ./src/migrations/$npm_config_name",
    "migration:run": "npm run typeorm migration:run -- -d ./src/typeorm.config.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./src/typeorm.config.ts",
    "migration:generate": "npm run typeorm migration:generate ./src/migrations/$npm_config_name -- -d ./src/typeorm.config.ts"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.3",
    "@nestjs/common": "^10.4.4",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.4.12",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "10.0.2",
    "@ton/ton": "^13.5.1",
    "@tonconnect/sdk": "3.0.0-beta.6",
    "axios": "^1.7.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "js-big-decimal": "^2.1.0",
    "moment": "^2.30.1",
    "nestjs-telegraf": "^2.8.1",
    "numeral": "^2.0.6",
    "pm2-master-process": "^2.0.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3",
    "ton": "^13.9.0",
    "tonweb": "^0.0.66",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.4",
    "@telegraf/types": "^7.1.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/ledgerhq__hw-transport": "^4.21.8",
    "@types/node": "^20.17.3",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
